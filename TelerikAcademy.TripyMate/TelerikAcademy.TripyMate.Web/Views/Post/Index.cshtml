@using Microsoft.AspNet.Identity
@model TelerikAcademy.TripyMate.Web.Models.Post.PostViewModel
@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>


    <style>
       #map {
        height: 400px;
        width: 100%;
       }
       /* Optional: Makes the sample page fill the window. */

      #floating-panel {
        position: absolute;
        top: 10px;
        left: 25%;
        z-index: 5;
        background-color: #fff;
        padding: 5px;
        border: 1px solid #999;
        text-align: center;
        font-family: 'Roboto','sans-serif';
        line-height: 30px;
        padding-left: 10px;
      }
      #warnings-panel {
        width: 100%;
        height:10%;
        text-align: center;
      }
    </style>
 
</head>
<body>
    @Html.AntiForgeryToken()
    <h4>@Model.StartTown ⇨ @Model.EndTown</h4>
    @{
        var p = DateTime.Now - Model.PostedOn;
        int m;
    }
    Posted : @p.Hours hours and @p.Minutes minutes ago !

    <hr />
    <h3>Estimated route. </h3>
    <div id="floating-panel">
        <b>Start: </b>
        <select id="start">
            <option value=@Model.StartTown>@Model.StartTown</option>
        </select>
        <b>End: </b>
        <select id="end">
            <option value=@Model.EndTown>@Model.EndTown</option>
        </select>
    </div>
    <div id="map"></div>
    &nbsp;
    <div id="warnings-panel"></div>
    <div class="row text-center">
    </div>
    <div class="main-agileits">
        <div class="mainw3-agileinfo form" style="background:rgba(0, 0, 0, 0.60);width:100%; border-radius: 5px;">
            <div id="login">
                <div class="row textMad" style="color:#FFF;font-weight: bold;">
                    <div class="col-md-2">
                        <img src="@Model.PhotoId" class="roundImg" />
                    </div>
                    <div class="col-md-3">
                        <form action="#" method="post">
                            <div class="field-wrap text-center">
                                <div class="row text-center">
                                    <br /><br />
                                    <p> Driv3r: <span class="textWhiteMad">@Model.FirstName @Model.LastName</span></p>
                                    <p> Call me : <span class="textWhiteMad">@Model.PhoneNumber</span></p>
                                    <p><span class="textWhiteMad"> @Model.AuthorEmail </span> </p>
                                </div>
                            </div>
                    </div>
                    <div class="col-md-7">
                        <div class="field-wrap">
                            <h4>@Model.Title</h4>
                            <hr />
                            <p>@Model.Content</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/gmapsapi.js"></script>
    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB6h3Ck5dhxCZjKMxFYga9vX2rZ_r9If00&callback=initMap">
    </script>

</body>
</html>

